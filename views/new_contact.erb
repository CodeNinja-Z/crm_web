<h1 class="new-contact">Create new Contact</h1>

<div class="new-contact-form">
  <form action="/contacts" method="post">
    <table>
        <tr>
          <th><label for="first_name">First name: </label></th>
          <td><input type="text" name="first_name" id="first_name" placeholder="Carlos"></td>
          <!-- compare attributes: placeholder & value -->
        </tr>
        <tr>
          <th><label for="last_name">Last name: </label></th>
          <td><input type="text" name="last_name" id="last_name" placeholder="Zhao"></td>
        </tr>
        <tr>
          <th><label for="email">Email: </label></th>
          <td><input type="email" name="email" id="email" class="textbox" placeholder="blacklight728@gmail.com"></td>
        </tr>
        <tr>
          <th><label for="notes">Notes: </label></th>
          <td><textarea name="notes" id="notes" class="textbox" placeholder="Web developer"></textarea></td>
        </tr>
        <tr>
          <th></th>
          <td><input type="submit" name="Submit"></td>
        </tr>   
      </table>
      <!-- <input type="submit" name="Submit"> -->
  </form>
</div>
