<h1>Edit a Contact</h1>

<div class="edit-contact-form">
  <form action="/contacts/<%= @contact_to_update.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <table>
        <tr>
          <th><label for="first_name">First name: </label></th>
          <td><input type="text" name="first_name" id="first_name" value="<%= @contact_to_update.first_name %>"></td>
        </tr>
        <tr>
          <th><label for="last_name">Last name: </label></th>
          <td><input type="text" name="last_name" id="last_name" value="<%= @contact_to_update.last_name %>"></td>
        </tr>
        <tr>
          <th><label for="email">Email: </label></th>
          <td><input type="email" name="email" id="email" class="textbox" value="<%= @contact_to_update.email %>"></td>
        </tr>
        <tr>
          <th><label for="notes">Notes: </label></th>
          <td><textarea name="notes" id="notes" class="textbox"><%= @contact_to_update.notes %></textarea></td>
        </tr>
        <tr>
          <th></th>
          <td><input type="submit" name="Submit"></td>
        </tr>   
      </table>
  </form>
</div>

